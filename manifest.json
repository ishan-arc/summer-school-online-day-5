{
  "manifest_version": 3,
  "name": "Weather Extension",
  "version": "1.0",
  "description": "Fetches and displays current weather based on your location.",
  "permissions": [
    "geolocation"
  ],
  "host_permissions": [
    "https://api.weatherapi.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
}
